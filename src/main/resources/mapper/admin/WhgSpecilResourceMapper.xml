<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.creatoo.hn.mapper.WhgSpecilResourceMapper">

<!-- 活动后台管理列表 查询 -->
    <select id="searchName" resultType="WhgSpecilResourceSarch">
        select
        t.*,
        (SELECT b.name FROM wh_branch b WHERE t.branch = b.id) AS branchName
        from whg_specil_resource t
        WHERE 1=1
        <if test="name != null and name != ''">
            AND t.name like "%"#{name}"%"
        </if>
        <if test="state != null">
            AND t.state = #{state}
        </if>
        <if test="states != null">
            AND t.state IN
            <foreach item="item" index="index" collection="states" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="isdel != null">
            AND t.isdel = #{isdel}
        </if>
        <if test="isdel == null">
            AND t.isdel = 0
        </if>
        <if test="relList != null">
            AND t.id IN
            <foreach item="item" index="index" collection="relList" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <choose>
            <when test="sort != null">
                ORDER BY t.${sort}
                <if test="order!=null"> ${order} </if>
            </when>
            <otherwise>
                ORDER BY t.crtdate DESC
            </otherwise>
        </choose>
    </select>

</mapper>